<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    android:id="@id/activity_menu" 
    android:paddingLeft="@dimen/activity_horizontal_margin" 
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin" 
    android:paddingBottom="@dimen/activity_vertical_margin" 
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <Button 
        android:id="@id/playButton" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginRight="79.0dip" 
        android:text="Play Game" 
        android:layout_centerHorizontal="true" 
        android:layout_centerVertical="true" 
        android:onClick="playGame" />
    <Spinner 
        android:entries="@array/menu_spinner" 
        android:id="@id/spinner" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginTop="11.0dip" 
        android:layout_below="@id/playButton" 
        android:layout_centerHorizontal="true" />
    <TextView 
        android:textSize="40.0dip" 
        android:id="@id/title" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:layout_marginBottom="74.0dip" 
        android:text="CONCENTRATION" 
        android:layout_above="@id/playButton" 
        android:layout_centerHorizontal="true" />
    <Button 
        android:id="@id/highScores" 
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11.0dip" 
        android:text="High Scores" 
        android:layout_below="@id/spinner" 
        android:layout_centerHorizontal="true"
        android:onClick="highScores" />
    <ToggleButton 
        android:textSize="0.0dip" 
        android:id="@id/menu_sound" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content" 
        android:textOn="" android:textOff="" 
        android:text="Music" 
        android:drawableTop="@drawable/sound" 
        android:layout_alignParentBottom="true" 
        android:onClick="muteSong" 
        android:layout_alignParentEnd="true" />
</RelativeLayout>